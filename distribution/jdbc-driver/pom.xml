              <exclude>javax.validation:*</exclude>
              <exclude>antlr:*</exclude>
              <exclude>org.ow2.asm:*</exclude>
              <exclude>com.univocity:*</exclude>
              <exclude>com.twitter:*</exclude>
              <exclude>org.apache.parquet:*</exclude>
              <exclude>javax.inject:*</exclude>
              <exclude>jline:*</exclude>
              <exclude>io.netty:netty:jar</exclude>
              <exclude>org.xerial.snappy:*</exclude>
              <exclude>org.tukaani:*</exclude>
              <exclude>org.apache.velocity:*</exclude>
              <exclude>net.hydromatic:linq4j</exclude>
              <exclude>org.codehaus.janino:*</exclude>
              <exclude>org.mortbay.jetty:*</exclude>
              <exclude>org.slf4j:jul-to-slf4j</exclude>
              <exclude>org.slf4j:log4j-over-slf4j</exclude>
              <exclude>org.hamcrest:hamcrest-core</exclude>
              <exclude>org.assertj:assertj-core</exclude>
              <exclude>org.mockito:mockito-core</exclude>
              <exclude>org.objenesis:objenesis</exclude>
              <exclude>org.apache.httpcomponents:*</exclude>
              <exclude>com.github.slugify:*</exclude>
              <exclude>com.koloboke:*</exclude>
              <exclude>de.vandermeer:*</exclude>
              <exclude>com.dremio.distribution:dremio-distribution-resources</exclude>
              <exclude>org.apache.datasketches:*</exclude>
              <exclude>com.esri.geometry:*</exclude>
              <exclude>org.antlr:*</exclude>
              <exclude>org.hdrhistogram:HdrHistogram:*</exclude>
              <exclude>io.grpc:*</exclude>
              <exclude>org.apache.yetus:audience-annotations</exclude>
              <exclude>org.apache.httpcomponents.*:*</exclude>
            </excludes>
          </artifactSet>
          <relocations>
            <relocation>
              <pattern>com.</pattern>
              <shadedPattern>com.dremio.jdbc.shaded.com.</shadedPattern>
              <excludes>
                <exclude>com.dremio.jdbc.**</exclude>
                <exclude>com.sun.**</exclude>
              </excludes>
            </relocation>
            <relocation>
              <pattern>org.</pattern>
              <shadedPattern>com.dremio.jdbc.shaded.org.</shadedPattern>
            </relocation>

            <!-- Move dependencies out of path -->
            <relocation>
              <pattern>io.</pattern>
              <shadedPattern>com.dremio.jdbc.shaded.io.</shadedPattern>
            </relocation>
            <relocation>
              <pattern>javacc.</pattern>
              <shadedPattern>com.dremio.jdbc.shaded.javacc.</shadedPattern>
            </relocation>
            <relocation>
              <pattern>java_cup.</pattern>
              <shadedPattern>com.dremio.jdbc.shaded.java_cup.</shadedPattern>
            </relocation>
            <relocation>
              <pattern>javassist.</pattern>
              <shadedPattern>com.dremio.jdbc.shaded.javassist.</shadedPattern>
            </relocation>
            <relocation>
              <pattern>jline.</pattern>
              <shadedPattern>com.dremio.jdbc.shaded.jline.</shadedPattern>
            </relocation>
            <relocation>
              <pattern>license.</pattern>
              <shadedPattern>com.dremio.jdbc.shaded.license.</shadedPattern>
            </relocation>
            <relocation>
              <pattern>net.</pattern>
              <shadedPattern>com.dremio.jdbc.shaded.net.</shadedPattern>
            </relocation>
            <relocation>
              <pattern>parquet.</pattern>
              <shadedPattern>com.dremio.jdbc.shaded.parquet.</shadedPattern>
            </relocation>
            <relocation>
              <pattern>test.</pattern>
              <shadedPattern>com.dremio.jdbc.shaded.test.</shadedPattern>
            </relocation>
            <relocation>
              <pattern>trax.</pattern>
              <shadedPattern>com.dremio.jdbc.shaded.trax.</shadedPattern>
            </relocation>

            <!-- Entries to relocate netty native libraries  -->
            <relocation>
              <pattern>META-INF.native.libnetty_</pattern>
              <shadedPattern>META-INF.native.libcom_dremio_jdbc_shaded_netty_</shadedPattern>
            </relocation>
            <relocation>
              <pattern>META-INF.native.netty_</pattern>
              <shadedPattern>META-INF.native.com_dremio_jdbc_shaded_netty_</shadedPattern>
            </relocation>

            <!-- Entries to relocate log4j resource bundle -->
            <relocation>
              <pattern>Log4j-charsets</pattern>
              <shadedPattern>CDJDLog4j-charsets</shadedPattern>
            </relocation>
          </relocations>
          <transformers>
            <transformer implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
              <resource>sabot-module.conf</resource>
            </transformer>
            <transformer implementation="org.apache.maven.plugins.shade.resource.ServicesResourceTransformer"/>
          </transformers>
          <filters>
            <filter>
              <artifact>org.apache.calcite.avatica:*</artifact>
              <excludes>
                <exclude>org/apache/calcite/avatica/org/apache/http/**</exclude>
                <exclude>org/apache/calcite/avatica/org/apache/commons/codec/**</exclude>
                <exclude>org/apache/calcite/avatica/com/fasterxml/jackson/**</exclude>
              </excludes>
            </filter>
            <filter>
              <artifact>org.*:*</artifact>
              <excludes>
                <exclude>META-INF/**</exclude>
              </excludes>
            </filter>
            <filter>
              <artifact>com.fasterxml.*:*</artifact>
              <excludes>
                <exclude>META-INF/**</exclude>
              </excludes>
            </filter>
            <filter>
              <artifact>*:*</artifact>
              <excludes>
                <exclude>**/logback.xml</exclude>
                <exclude>**/LICENSE.txt</exclude>
                <exclude>**/*.java</exclude>
