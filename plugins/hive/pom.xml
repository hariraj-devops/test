          <artifactId>hadoop-native-libraries</artifactId>
          <version>${hadoop.native.libraries.version}</version>
          <classifier>linux</classifier>
          <scope>test</scope>
        </dependency>
      </dependencies>

      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-dependency-plugin</artifactId>
            <executions>
              <execution>
                <id>unpack</id>
                <goals>
                  <goal>unpack</goal>
                </goals>
                <phase>initialize</phase>
                <configuration>
                  <artifactItems>
                    <artifactItem>
                      <groupId>org.apache.hadoop</groupId>
                      <artifactId>hadoop-common-native</artifactId>
                      <classifier>linux</classifier>
                      <version>${hadoop.version}</version>
                      <outputDirectory>${project.build.directory}/native-libraries</outputDirectory>
                    </artifactItem>

                    <artifactItem>
                      <groupId>org.apache.hadoop</groupId>
                      <artifactId>hadoop-native-libraries</artifactId>
                      <classifier>linux</classifier>
                      <version>${hadoop.native.libraries.version}</version>
                      <outputDirectory>${project.build.directory}/native-libraries</outputDirectory>
                    </artifactItem>
                  </artifactItems>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
